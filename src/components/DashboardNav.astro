---
import homeIcon from "../assets/home.svg";
import commanderIcon from "../assets/commander.svg";
import catalogueIcon from "../assets/catalogue.png";
import profilIcon from "../assets/profil.svg";

const links = [
	{ href: "/dashboard", label: "Accueil", icon: homeIcon.src },
	{ href: "/precommande", label: "Commander", icon: commanderIcon.src },
	{ href: "/catalogue", label: "Catalogue", icon: catalogueIcon.src },
	{ href: "/profile", label: "Profil", icon: profilIcon.src }
];
---

<nav class="fixed inset-x-0 bottom-4 z-40">
	<div class="mx-auto flex max-w-lg items-center justify-between rounded-2xl bg-white/85 px-3 py-2 shadow-[0_18px_35px_-22px_rgba(73,70,255,0.55)] ring-1 ring-slate-100 backdrop-blur">
		{links.map((link) => (
			<a
				href={link.href}
				class="flex flex-1 flex-col items-center gap-1 rounded-xl px-2 py-2 text-xs font-semibold text-slate-500 transition hover:text-[#2d7dff]"
			>
				<span class="flex h-8 w-8 items-center justify-center rounded-xl bg-slate-50 shadow-inner">
					<img src={link.icon} alt="" class="h-4 w-4" loading="lazy" />
				</span>
				<span>{link.label}</span>
			</a>
		))}
	</div>
</nav>
